!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= "Verification" + yield(:title)
    %meta{:content => content_for?(:description) ? yield(:description) : "Whatsnew", :name => "description"}/
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    %header
      /= render 'layouts/navigation'
      #my-navigation
        = current_user.name
        = link_to content_tag(:i, nil, class: 'glyphicon glyphicon-log-out'), sign_out_path, title: "Log out"
    %main{:role => "main"}
      = render 'layouts/messages'
      = yield
