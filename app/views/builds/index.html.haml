%br
%table{ width: "100%" }
  %tr
    %td{ width: "8%", valign: "top" }
      .build-list{ style: "width: 150px; height: 700px; overflow: auto" }
        - if !@builds.empty?
          %ul
            - @builds.each do |build|
              %li
                = link_to build.number, build, remote: true, id: 'build-link'
                = '(' + build.tag + ')'
    %td{ align: "center", valign: "top" }
      #loading-indicator
        %br
        = image_tag "loading.gif"
      #build-info
