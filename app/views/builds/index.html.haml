%br
%table{ width: "100%" }
  %tr
    %td{ style: "width: 200px;", valign: "top" }
      #stats-container
        #stats-subcontainer
      .build-list{ style: "height: 430px; overflow: auto" }
        - if !@builds.empty?
          - @builds.each do |build|
            %table.builds-table
              %tr.build-row{ class: build.number }
                %td{ width: 22 }
                  = image_tag !build.processed ? asset_path("not_fully_processed.png") : asset_path("processed.png")
                %td{ width: 35 }
                  = link_to build.number, build, remote: true, id: 'build-link', class: 'build-link'
                %td{ width: 45 }
                  = '(' + build.tag + ')'
                %td{ width: 78 } 
                  = build.whatsnew_time.to_s[0..10]
    %td{ align: "center", valign: "top" }
      #loading-indicator{ style: "margin-left: -200px" }
        %br
        = image_tag "loading.gif"
      #build-info
